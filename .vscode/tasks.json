{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "ninja",
            "args": [
                "-C",
                "${env:BUILD_DIR}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "buildwasm",
            "type": "shell",
            "command": "ninja",
            "args": [
                "-C",
                "${env:BUILD_DIR}/../mindustry.compiler.wasm"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "buildwasmdebug",
            "type": "shell",
            "command": "ninja",
            "args": [
                "-C",
                "${env:BUILD_DIR}/../mindustry.compiler.wasm.debug"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": "$gcc"
        }
    ]
}