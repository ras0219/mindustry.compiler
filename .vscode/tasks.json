{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "ninja",
            "args": [
                "-C",
                "${env:BUILD_DIR}",
                "&&",
                "${env:BUILD_DIR}/main",
                "${workspaceFolder}/examples/test.c"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        }
    ]
}